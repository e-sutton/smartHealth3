<p id="notice"><%= notice %></p>

<h1>Prescriptions</h1>

<table class="table table-striped table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Cost</th>
      <th>Doctorname</th>
      <th>Medicine</th>
      <th>Dose</th>
      <th>Description</th>
      <th>Patient</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prescriptions.each do |prescription| %>
      <tr>
        <td><%= prescription.firstname %></td>
        <td><%= prescription.lastname %></td>
        <td><%= prescription.cost %></td>
        <td><%= prescription.doctorname %></td>
        <td><%= prescription.medicine %></td>
        <td><%= prescription.dose %></td>
        <td><%= prescription.description %></td>
        <td><%= prescription.patient %></td>
        <td><%= link_to 'Show', prescription, class: "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_prescription_path(prescription), class: "btn btn-info" %></td>
        <td><%= link_to 'Destroy', prescription, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Prescription', new_prescription_path, class: "btn btn-default"%>
