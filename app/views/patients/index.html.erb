    <div class="container">
<p id="notice"><%= notice %></p>

<%= form_tag(patients_path, :method =>"get") do %>
  <%= text_field_tag :search, nil, :placeholder => "Search patients by last name" %>
  <%= submit_tag "Search" %>
<%end%> 


      <div class="starter-template">

<h1>Patients</h1>

<table class="table table-striped table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>ID</th>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Dob</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Injury</th>
      <th>Observations</th>
      <th>Doctor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
	<td><%= patient.id %></td>
        <td><%= patient.firstname %></td>
        <td><%= patient.lastname %></td>
        <td><%= patient.dob %></td>
        <td><%= patient.address %></td>
        <td><%= patient.phone %></td>
        <td><%= patient.injury %></td>
        <td><%= patient.observations %></td>
        <td><%= patient.doctor %></td>
        <td><%= link_to 'Show', patient, class: "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient), class: "btn btn-info" %></td>
        <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Patient', new_patient_path, class: "btn btn-default" %> | 
