<body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">SmartHealth</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><%= link_to 'Patients', patients_path %></li>
            <li><%= link_to 'Profile', '/profiles' %></li>
	     <li><%= link_to 'Prescriptions', prescriptions_path %></li>
 <li><%= link_to 'Report', report_path %></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <div class="container">


      <div class="starter-template">


<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table class="table table-striped table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Address</th>
      <th>Hospital</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.firstname %></td>
        <td><%= profile.lastname %></td>
        <td><%= profile.address %></td>
        <td><%= profile.hospital %></td>
        <td><%= profile.user_id %></td>
        <td><%= link_to 'Show', profile, class: "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile), class: "btn btn-info" %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<b><%= link_to 'Go to Patients', '/patients', class: "btn btn-default" %></b> |
<%= link_to 'New Profile', new_profile_path, class: "btn btn-default" %>
</div>
</div>
</body>
